<!DOCTYPE html>
<html lang="id">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ToDo Page</title>
    <!-- CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <link rel="stylesheet" href="/css/todo.css">
</head>

<body>
    <nav class="navbar navbar-expand-lg fixed-top">
        <a class="navbar-brand" href="<%= url %>"><img src="/images/logo.png"
                alt="logo"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="<%= url %>">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="<%= url %>contact">Kontak</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="<%= url %>todo">ToDo</a>
                </li>
            </ul>
        </div>
        <div class="logout">
            <a href="<%= url %>login/logout"><i class="bi bi-box-arrow-right"></i> Sign Out</a>
        </div>
    </nav>

    <div style="margin-top: 100px;"></div>
    <main class="container mt-5">
        <h1 class="text-center mb-4">Tambahkan Mobil Ke Garasi</h1>
        <div class="text-center mb-4">
            <button class="btn btn-primary" data-toggle="modal" data-target="#addTodoModal">Tambahkan Ke Garasi</button>
        </div>

        <div class="row" id="todo-container">
            <!-- Example Card -->
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Garasi Mobil</h5>
                        <p class="card-text">Mobil yang sudah anda tambahkan ke garasi</p>
                        <div class="d-flex justify-content-between">
                            <button class="btn btn-warning btn-sm" data-toggle="modal" data-target="#editTodoModal" onclick="editTodo(0)">Edit</button>
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- More cards dynamically added -->
        </div>
    </main>

    <!-- Add Todo Modal -->
    <div class="modal fade" id="addTodoModal" tabindex="-1" role="dialog" aria-labelledby="addTodoModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addTodoModalLabel">Tambahkan Mobil</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="addTodoForm">
                        <div class="form-group">
                            <label for="todoImg">Pilih Gambar Mobil:</label><br>
                            <input type="radio" name="todoImage" value="/images/g1.png" required>
                            <img src="/images/g1.png" alt="Image 1" class="img-thumbnail" width="100">
                            <input type="radio" name="todoImage" value="/images/g2.png" required>
                            <img src="/images/g2.png" alt="Image 2" class="img-thumbnail" width="100">
                        </div>
                        <div class="form-group">
                            <label for="todoText">Keterangan Mobil Anda:</label>
                            <input type="text" class="form-control" id="todoText" placeholder="Enter Description">
                        </div>
                        <button type="submit" class="btn btn-primary">Tambahkan</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Todo Modal -->
    <div class="modal fade" id="editTodoModal" tabindex="-1" role="dialog" aria-labelledby="editTodoModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editTodoModalLabel">Edit Todo</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="editTodoForm">
                        <div class="form-group">
                            <label for="editTodoImg">Pilih Gambar Mobil:</label><br>
                            <input type="radio" name="todoImage" value="img1.jpg" id="editImg1">
                            <img src="/images/g1.png" alt="Image 1" class="img-thumbnail" width="100">
                            <input type="radio" name="todoImage" value="/images/g2.png" id="editImg2">
                            <img src="/images/g2.png" alt="Image 2" class="img-thumbnail" width="100">
                        </div>
                        <div class="form-group">
                            <label for="editTodoText">Keterangan Mobil Anda:</label>
                            <input type="text" class="form-control" id="editTodoText" placeholder="Edit Description">
                        </div>
                        <button type="submit" class="btn btn-primary">Simpan</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
    <div class="footer-bottom fixed-bottom">
        <div class="first-box">
            <a href="https://www.instagram.com/alifiann_m.a" target="_blank" rel="noopener noreferrer">
                <i class="fa-brands fa-instagram"></i> Instagram
            </a>
            <a href="https://www.facebook.com/muhammadalif1213" target="_blank" rel="noopener noreferrer">
                <i class="fa-brands fa-facebook"></i> Facebook
            </a>
        </div>
        <div class="last-box">
            <a href="#">&copy; Copyright 2024 - Muhammad Alifian Aqilah</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>
    <script>
        // In-memory todo list
        let todos = [];

        // Function to render todos
        const todoContainer = document.getElementById("todo-container");
        function renderTodos() {
            todoContainer.innerHTML = ""; // Clear existing content

            todos.forEach((todo, index) => {
                const todoCard = document.createElement("div");
                todoCard.className = "col-md-3 mb-3";
                
                todoCard.innerHTML = `
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Mobil Anda</h5>
                            <img src="${todo.img}" alt="Image" class="img-thumbnail" width="100">
                            <p class="card-text"><b>Keterangan :</b></p>
                            <p class="card-text">${todo.text}</p>
                            
                            <div class="d-flex justify-content-between">
                                <button class="btn btn-warning btn-sm" onclick="editTodo(${index})" data-toggle="modal" data-target="#editTodoModal">Edit</button>
                                <button class="btn btn-danger btn-sm" onclick="deleteTodo(${index})">Delete</button>
                            </div>
                        </div>
                    </div>
                `;
                todoContainer.appendChild(todoCard);
            });
        }

        // Handle Add Todo
        const addTodoForm = document.getElementById("addTodoForm");
        addTodoForm.addEventListener("submit", (e) => {
            e.preventDefault();

            const todoText = document.getElementById("todoText").value;
            const todoImage = document.querySelector('input[name="todoImage"]:checked').value;

            const newTodo = { text: todoText, img: todoImage };
            todos.push(newTodo);
            renderTodos();
            $('#addTodoModal').modal('hide');
        });

        // Edit Todo
        function editTodo(index) {
            const todo = todos[index];
            document.getElementById("editTodoText").value = todo.text;
            document.querySelector(`input[name="todoImage"][value="${todo.img}"]`).checked = true;

            // Update todo on form submit
            const editTodoForm = document.getElementById("editTodoForm");
            editTodoForm.onsubmit = function (e) {
                e.preventDefault();
                todo.text = document.getElementById("editTodoText").value;
                todo.img = document.querySelector('input[name="todoImage"]:checked').value;
                renderTodos();
                $('#editTodoModal').modal('hide');
            };
        }

        // Delete Todo
        function deleteTodo(index) {
            todos.splice(index, 1);
            renderTodos();
        }
    </script>
</body>

</html>
